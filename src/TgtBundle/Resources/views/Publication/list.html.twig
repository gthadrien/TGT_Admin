{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Listes des Publications</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Les Publications</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Categorie</th>
                        <th>Source</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Categorie</th>
                        <th>Source</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for i in pubs %}
                        <tr>
                            <td>{{ i.titre }}</td>
                            <td>{{ i.description }}</td>
                            <td>{{ i.categorie }}</td>
                            <td>{{ i.lien }}</td>
                            <td>
                                <a href="{{ path('publication_del',{'id':i.id}) }}" class="btn btn-danger btn-circle">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
{% endblock %}